@model Home
<style>
    .chart body {
        font-family: 'Arial', sans-serif;
    }

    .chart table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .chart th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .chart th {
        background-color: #f2f2f2;
    }

    .chart tr:hover {
        background-color: #f5f5f5;
    }
</style>



<!-- Danh sách bài hát -->

<h2>#Songchart</h2>

    <table class="chart">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Bài hát</th>
                <th>Nghệ sĩ</th>
                <th>Thể loại</th>
                <th>Lượt nghe</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Playlists.Count; i++)
        {
            var item = Model.Songs[i];
            <tr>
                <td>@(i+1)</td>
                <td><a href="@Url.Action("Details", "Songs",new {id = @item.ID})">@item.Name</a></td>
                <td>@item.Artist.Name</td>
                <td>@item.Genre.Name</td>
                <td>@item.ViewCount</td>
            </tr>
        }
        </tbody>
    </table>




